{
  "name": "xon",
  "author": "nizami",
  "type": "module",
  "devDependencies": {
    "@types/node": "^22.13.1",
    "@types/vscode": "^1.97.0",
    "barrelsby": "^2.8.1",
    "esbuild": "^0.25.0",
    "typescript": "^5.7.3",
    "vite": "^6.1.0",
    "vitest": "^3.0.5"
  },
  "scripts": {
    "test": "vitest run",
    "dev": "tsc --noEmit --watch",
    "vscode:build": "rm -rf 'packages/vscode/dist' && esbuild 'packages/vscode/src/main.ts' --bundle --outfile='packages/vscode/dist/vscode/src/main.js' --external:vscode --format=cjs --platform=node",
    "barrels": "barrelsby -qD -e dist -e .test -d 'packages/typing' 'packages/common' 'packages/diagnostic' 'packages/analyzer' 'packages/interpreter' 'packages/translator' 'packages/vscode' 'packages/xon-lib'"
  }
}
